<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - MarsStreetView</title>

    <environment include="Development">
        <script src="~/lib/jquery/jquery-3.3.1.slim.min.js" asp-fallback-src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
        <script src="~/lib/popper/popper.min.js" asp-fallback-src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
        <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" asp-fallback-href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
        <script src="~/lib/bootstrap/js/bootstrap.min.js" asp-fallback-src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    </environment>
</head>
<body>
    <div class="container-fluid offset-lg-1 offset-sm-0 col-lg-10 col-sm-12">
        <div class="row">
            <div class="jumbotron col mb-3">
                <div class="text-center">
                    <h1>@ViewBag.Title</h1>
                    <h4>@ViewBag.Tagline</h4>
                </div>
            </div>
        </div>

        @if (TempData.ContainsKey("NotificationMessage"))
        {
            <div class="row alert @(TempData.ContainsKey("NotificationType") ? TempData["NotificationType"] : "")">
                @TempData["NotificationMessage"]
            </div>
        }

        <ul class="nav nav-pills nav-justified mb-3">
            <li class="nav-item">
                <a class="nav-link @((ViewBag.Title.Contains("curiosity")) ? "active" : "")" asp-controller="Rovers" asp-action="Index" asp-route-rover="curiosity">Curiosity</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @((ViewBag.Title.Contains("opportunity")) ? "active" : "")" asp-controller="Rovers" asp-action="Index" asp-route-rover="opportunity">Opportunity</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @((ViewBag.Title.Contains("spirit")) ? "active" : "")" asp-controller="Rovers" asp-action="Index" asp-route-rover="spirit">Spirit</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @((ViewBag.Title.Contains("Favorite")) ? "active" : "")" asp-controller="FavoriteLists" asp-action="Index">Favorite Lists</a>
            </li>
        </ul>

        @RenderBody()
        <br />
        <strong>Copyright (C) 2018 <a href="mailto:taylor.joshua88@gmail.com">Joshua William Taylor</a></strong>
    </div>
</body>
</html>
