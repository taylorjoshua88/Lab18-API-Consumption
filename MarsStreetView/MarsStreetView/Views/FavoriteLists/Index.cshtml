@model List<FavoriteList>

@{
    ViewBag.Title = "Favorite Lists";
    ViewBag.Tagline = "All current favorite lists in the database";
}

<div class="row">
    <div class="col-md-8 offset-md-2 col-12">
    <div class="card">
        <div class="card-header">
            <p class="float-left">Favorite Lists</p>
            <a asp-action="Create" class="btn btn-success float-right">Create New</a>
        </div>
        <div class="card-body">

            <ul class="list-group">
                @foreach (var list in Model)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a asp-action="List" asp-route-id="@list.Id" class="list-group-item list-group-item-action">@list.Name </a>
                        <span class="badge badge-primary badge-pill">@list.Favorites.Count()</span>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
</div>